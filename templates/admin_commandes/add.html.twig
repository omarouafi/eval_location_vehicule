{% extends 'base.html.twig' %}

{% block title %}Admin - Ajouter une commande{% endblock %}

{% block body %}
{% include '/components/nav.html.twig' %}

    <div>
      
        <div class="container mx-auto max-w-2xl mt-10">
            <div class="flex items-center justify-between mb-6">
                <a href="{{ path('app_admin_commandes') }}" class="text-indigo-600 hover:text-indigo-600 flex items-center">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                    <Span>Retour</span>
                </a>
            </div>
            <h2 class="text-2xl font-bold mb-4">Ajouter une commande</h2>
            <p class="mt-1 text-sm leading-6 text-gray-600">
                Remplissez le formulaire ci-dessous pour ajouter un commande. </p>

            {% for message in app.flashes('success') %}
                <div class="bg-green-500 text-white py-2 px-4 mb-4">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-500 text-white py-2 px-4 mb-4">{{ message }}</div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'space-y-12'}}) }}
                <div class="border-b border-gray-900/10 pb-12">

                    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 mb-12">
                        <div class="sm:col-span-4">
                            <label for="id_vehicule" class="block text-sm font-medium leading-6 text-gray-900">ID Vehicule</label>
                            <div class="mt-2">
                                <input type="number" required name="id_vehicule" id="id_vehicule" autocomplete="id_vehicule" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-2">
                            </div>
                        </div>
                        <div class="sm:col-span-4">
                            <label for="id_membre" class="block text-sm font-medium leading-6 text-gray-900">ID Membre</label>
                            <div class="mt-2">
                                <input type="number" required name="id_membre" id="id_membre" autocomplete="id_membre" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-2">
                            </div>
                        </div>
                        <div class="sm:col-span-4">
                            <label for="id_membre" class="block text-sm font-medium leading-6 text-gray-900">Date Heure de d√©but de location</label>
                            <div class="mt-2 grid grid-cols-2 gap-x-6">
                                <div class="relative max-w-sm">
                                <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                                    <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                    </svg>
                                </div>
                                <input datepicker type="text" class=" border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 " placeholder="Select date" name="date_debut" required>
                                </div>
                                  <div>
                                <input type="time" name="time_debut" id="time_debut" autocomplete="time_debut" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-2" required>
                                </div>
                            </div>
                        </div>
                        <div class="sm:col-span-4">
                            <label for="id_membre" class="block text-sm font-medium leading-6 text-gray-900">Date Heure de fin de location</label>
                            <div class="mt-2 grid grid-cols-2 gap-x-6">
                                <div class="relative max-w-sm">
                                <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                                    <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                    </svg>
                                </div>
                                    <input datepicker type="text" class=" border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 " placeholder="Select date" name="date_fin" required>
                                </div>
                                <div>
                                <input required type="time" name="time_fin" id="time_fin" autocomplete="time_fin" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-2">
                                </div>
                            </div>
                        </div>

                         <div class="sm:col-span-4">
                            <label for="id_vehicule" class="block text-sm font-medium leading-6 text-gray-900">Prix total</label>
                            <div class="mt-2">
                                <input required type="number" name="prix_total" id="prix_total" autocomplete="prix_total" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-2">
                            </div>
                        </div>



                    </div>
                </div>

                 <div class="fixed bottom-0 left-0 right-0 bg-white p-4 shadow-md border-t border-gray-200 px-4 sm:px-6 lg:px-8">
                    <div class="container mx-auto flex justify-end items-center space-x-4">
                        <a href="/admin/commandes" class="text-sm font-semibold leading-6 text-gray-900">Annuler</a>
                        <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter une commande</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
